---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro';
import CodeIcon from '../components/icons/Code.astro';
import Profile from '../components/icons/Profile.astro';
import AboutMe from '../components/AboutMe.astro';
import Hero from '../components/Hero.astro';
import Projects from '../components/Projects.astro';
import TitleSection from '../components/TitleSection.astro';
---

<Layout 
    title="Portfolio de seraycrep - Desarrollador y programador web"
	description='Desarrollador web. De Lima, Perú. Especializado en crear aplicaciones responsivas y visuales.'
>
	<main class="px-4">
		<SectionContainer class="py-44 pb-24 px-10">
			<Hero>
			    </slot>
			</Hero>
		</SectionContainer>

		<SectionContainer id="proyectos" class="py-24 pb-24">
			<TitleSection>
				<CodeIcon class="size-7" />
				Proyectos
			</TitleSection>
			<Projects />
		</SectionContainer>

		<SectionContainer id="sobre-mi" class="pb-24">
			<TitleSection>
				<Profile class="size-7" />
				Sobre mí
			</TitleSection>
			<AboutMe />
		</SectionContainer>
	</main>
</Layout>

