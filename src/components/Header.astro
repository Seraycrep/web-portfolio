<!-- Change background color of header on scroll down -->
<script>
    const header = document.querySelector('header')
    window.addEventListener('scroll', function() {
        if (window.scrollY > 0) {
            header!.classList.add('bg-black/50')
        } else {
            header!.classList.remove('bg-black/50')
        }
    })
</script>


